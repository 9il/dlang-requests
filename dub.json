{
    "name": "requests",
    "description": "http client library, inspired by python-requests",
    "copyright": "Copyright Â© 2016, igor",
    "authors": ["ikod"],
    "license": "BSL-1.0",
    "configurations": [
        {
            "name": "std",
            "versions": ["sslLibs"],
            "libs-posix": ["ssl", "crypto"],
            "libs-windows": ["libssl32", "libeay32"]
        },
        {
            "name": "vibed",
            "versions": ["vibeD"],
            "dependencies": {
                "vibe-d": "~>0.7.29"
            },
        }
    ],
    "buildTypes": {
        "docs": {
            "buildOptions": ["syntaxOnly"],
            "dflags" : ["-c", "-Dddocs", "source/requests/viola.ddoc"]
        },
        "unittest": {
            "buildOptions": ["unittests", "debugMode", "debugInfo"],
            "dflags": ["-debug=requests"]
        },
        "localtest": {
            "buildOptions": ["unittests", "debugMode", "debugInfo"],
            "versions": ["localtest"]
        }
    }
}
